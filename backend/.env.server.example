# Server Environment Configuration
# Copy this file to .env on the server and update with actual values

# Environment Mode
ENVIRONMENT=production

# Database Configuration - Server PostgreSQL
# Update with your server's PostgreSQL password
DATABASE_URL=postgresql://pms_user:pms_password@localhost:5432/pms_db

# JWT Configuration
# Generate a secure random key for production!
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# CORS Settings - Server IP addresses
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://160.226.0.67:3000

# Frontend URL - Used for email links (onboarding, password reset, etc.)
# Update this with your actual frontend URL
FRONTEND_URL=http://160.226.0.67:3000
